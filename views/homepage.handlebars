{{#each posts as |post|}}
<article class="post">
  <h2>{{post.title}}</h2>
  <p>{{post.content}}</p>
  <div class="comments">
    <h3>Comments:</h3>
    {{#if post.comments}}
      <ul>
        {{#each post.comments as |comment|}}
          <li>{{comment.content}} - <em>by User {{comment.user_id}}</em></li>
        {{/each}}
      </ul>
    {{else}}
      <p>No comments yet.</p>
    {{/if}}
  </div>
</article>
{{/each}}